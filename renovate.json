{
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "labels": [
    "dependency"
  ],
  "npm": {
    "packageRules": [
      {
        "matchPackageNames": [
          "typescript"
        ],
        "allowedVersions": "4.4.*"
      },
      {
        "matchPackagePatterns": [
          "@.+\/.+"
        ],
        "groupName": "npm",
        "schedule": [
          "on the first day of the month"
        ]
      }
    ]
  }
}
